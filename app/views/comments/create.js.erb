console.log('JS response executed');
var commentsElement = document.getElementById("post<%= @post.id %>comments");
if (commentsElement) {
  commentsElement.outerHTML = "<%= j render 'posts/post_comments', post: @post %>";
  console.log('Comments updated');
} else {
  console.error('Comments element not found: post<%= @post.id %>comments');
}

var inputField = document.querySelector('#comment-text');
if (inputField) {
  inputField.value = '';
  console.log('Input field cleared');
} else {
  console.error('Input field not found');
}