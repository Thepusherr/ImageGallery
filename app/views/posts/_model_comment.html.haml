%div.mb-3.pb-3.border-bottom.border-secondary{id: "post#{comment.post_id}ModalComment#{comment.id}"}
  .d-flex.justify-content-between.align-items-start
    .d-flex.align-items-start.flex-grow-1.me-2
      = image_tag comment.user.avatar.attached? ? comment.user.avatar : asset_path('default-avatar.png'), class: "rounded-circle me-2 flex-shrink-0", style: "width: 32px; height: 32px; object-fit: cover;"
      .d-flex.flex-column.flex-grow-1{style: "min-width: 0;"}
        %p.mb-1{style: "word-wrap: break-word; overflow-wrap: break-word; word-break: break-word;"}
          = link_to comment.user, class: "text-decoration-none text-light fw-bold me-2", data: {turbo: false} do
            = comment.user.name
            = comment.user.surname
          %span.text-light= comment.text
        %small.text-secondary
          = time_ago_in_words(comment.created_at)
          ago
    - if comment.user == current_user
      = button_to comment_path(id: comment.id), method: :delete, class: "btn btn-sm btn-link text-danger p-0 flex-shrink-0", data: { turbo_confirm: 'Are you sure?' } do
        %i.fas.fa-times