%div{id: "post#{post.id}comment_form"}
  = form_with url: post_comments_path(post), method: :post, local: false do |f|
    .d-flex.justify-content-between.align-items-center.bg-dark.border.border-secondary.rounded.p-2
      - if defined?(error) && error.present?
        .alert.alert-danger= error
      = text_field_tag :text, nil, class: "form-control bg-dark text-light border-0", placeholder: "Add a comment...", style: "outline: none; box-shadow: none;"
      = f.submit "Post", class: "btn btn-primary btn-sm ms-2", style: "white-space: nowrap;"