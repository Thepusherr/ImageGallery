%div{id: "post#{post.id}comment_form"}
  %form.js-comment-form-ujs{action: post_comments_path(post, format: :js), method: "post", data: {turbo: "false"}}
    = hidden_field_tag :authenticity_token, form_authenticity_token
    .card-footer.d-flex.justify-content-between.bg-white.mt-3
      - if defined?(error) && error.present?
        .alert.alert-danger= error
      %input.w-100{type: "text", name: "text", placeholder: "Add a comment...", style: "border:none"}
      %input.text-primary.fw-bold{type: "submit", value: "Post", style: "background:none; border:none"}