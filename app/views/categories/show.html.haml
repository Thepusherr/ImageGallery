.container#main-container
  .row
    .justify-content-center
      .d-flex.justify-content-between.align-items-center.mb-4
        .d-flex.justify-content-between.align-items-center.mb-4
        %h1(style="font-size: 3rem; font-weight: bold;")
          =@category.name.pluralize.capitalize
        = render 'subscription', category: @category
        = render 'subscription', category: @category
      / Gallery Section
      %section#gallery.gallery.section
        .container-fluid{"data-aos" => "fade-up", "data-aos-delay" => "100"}
          .row.gy-4.justify-content-center
            - @posts_with_images.each_with_index do |post, index|
              - if post.image.attached?
              .col-xl-3.col-lg-4.col-md-6.mb-4
                .gallery-item
                  .image-wrapper(style="position: relative; width: 100%; padding-top: 75%;")
                    = image_tag url_for(post.image), alt: "Image #{index + 1}", class: "img-fluid", style: "position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover;"
                  .gallery-links.d-flex.align-items-center.justify-content-center
                    = link_to url_for(post.image), class: "glightbox preview-link" do
                      %i.bi.bi-arrows-angle-expand
                    = link_to image_category_path(@category, index + 1), class: "details-link" do
                      %i.bi.bi-link-45deg
        #preloader
          .line