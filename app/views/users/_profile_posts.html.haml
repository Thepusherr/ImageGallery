.container.d-flex.flex-column
  .d-flex.justify-content-center.align-items-center
    .w-center.border-2.border-top.border-dark
      %i.fa-solid.fa-table-cells
      %small Posts
  .row.justify-content-center.align-items-center
    - user.posts.each do |post|
      .col-lg-4.col-md-6.col-sm-8.p-3.mb-4.profile-post{style: "height: 20rem; position: relative"}
        = link_to post do
          = image_tag post.image, class: "img-thumbnail", style: "width: 100%; height:20rem;object-fit:cover"
          .d-flex.align-items-center.justify-content-center.gap-1.w-100.profile-post-likes
            %i.fa-solid.fa-heart.fa-xl.text-white
            %small.text-white.fw-bold= post.likes.count
            %i.fa-solid.fa-comment.fa-xl.fa-flip-horizontal.text-white
            %small.text-white.fw-bold= post.comments.count