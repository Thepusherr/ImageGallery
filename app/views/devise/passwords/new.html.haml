.container#form-container
  .row
    .col-sm-12.d-flex.justify-content-center.align-items-center
      .div
        %br/
        %h2.mb-4.text-center Forgot your password?
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
          = render "devise/shared/error_messages", resource: resource
          .field.mb-4
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control"
          .actions.mb-3
            = f.submit "Send me reset password instructions", class: "sign-up-button"
        = render "devise/shared/links"
