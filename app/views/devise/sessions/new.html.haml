.container#main-container
  .row
    .col-sm-12.d-flex.justify-content-center.align-items-center{:style => "margin-top: 100px;"}
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        %br/
        %h2.text-center.mb-4 Log in
        .field.mb-3
          = f.label :email
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "email"
        .field.mb-3
          = f.label :password
          %br/
          = f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "password"
        - if devise_mapping.rememberable?
          .field.mb-3
            = f.check_box :remember_me
            = f.label :remember_me
        .actions.mb-3
          = f.submit "Log in", class: "green-btn"
        %br/
        = render "devise/shared/links"
